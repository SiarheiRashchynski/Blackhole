{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "importHelpers": true,
        "strict": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "types": ["node", "jest"],
    "include": ["src/**/*.ts", "jest.config.js"],
    "exclude": ["node_modules"],
    "compiledFiles": ["dist/**/*.js"]
}
